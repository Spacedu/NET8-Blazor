@page "/Company/Add"
@rendermode InteractiveServer
<PageTitle>
    Empresa - Cadastro
</PageTitle>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Cadastrar empresa</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xxl-3 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">Razão Social</label>
                            <input type="text" autocomplete="off" class="form-control" id="basiInput">
                        </div>
                    </div>
                    <div class="col-xxl-3 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">Nome Fantasia</label>
                            <input type="text" autocomplete="off" class="form-control" id="basiInput">
                        </div>
                    </div>
                    <div class="col-xxl-3 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">CNPJ</label>
                            <input type="text" autocomplete="off" class="form-control" id="basiInput">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xxl-3 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">CEP</label>
                            <input type="text" autocomplete="off" class="form-control" id="basiInput">
                        </div>
                    </div>
                    <div class="col-xxl-3 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">Estado</label>
                            <input type="text" autocomplete="off" disabled class="form-control" id="basiInput">
                        </div>
                    </div>
                    <div class="col-xxl-3 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">Cidade</label>
                            <input type="text" autocomplete="off" disabled class="form-control" id="basiInput">
                        </div>
                    </div>
                    <div class="col-xxl-3 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">Bairro</label>
                            <input type="text" autocomplete="off" disabled class="form-control" id="basiInput">
                        </div>
                    </div>
                    <div class="col-xxl-6 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">Endereço</label>
                            <input type="text" autocomplete="off" class="form-control" id="basiInput">
                        </div>
                    </div>
                    <div class="col-xxl-3 col-md-6">
                        <div>
                            <label for="basiInput" class="form-label">Completo</label>
                            <input type="text" autocomplete="off" class="form-control" id="basiInput">
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="d-flex justify-content-between">
                        <a href="/Company/List" class="btn btn-light">Voltar</a>
                        <button class="btn btn-primary">Salvar</button>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>


